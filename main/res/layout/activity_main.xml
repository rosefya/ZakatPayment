<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background = "@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="100dip"
        android:ems="10"
        android:hint="Gold Weight(KG)"
        android:inputType="numberDecimal"
        android:textAlignment="center" />

        <EditText
            android:id="@+id/currentvalue"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:ems="10"
            android:hint="Current Gold Value(RM)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textAlignment="center" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:text="CALCULATE"
        android:textAlignment="center"/>

    /

    <RadioButton
        android:id="@+id/keep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keep" />


    <RadioButton
        android:id="@+id/wear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wear" />


    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="170dp"
        android:layout_marginEnd="237dp"
        android:layout_marginBottom="211dp"
        android:text="CLEAR"
        android:textAlignment="center"/>

        <TextView
            android:id="@+id/totalval"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="monospace"
            android:text="The total value of the gold:"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/totalgold"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="monospace"
            android:text="Total gold value that is payable : "
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/totalzakat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="monospace"
            android:text="The total zakat :"
            android:textAlignment="center"
            android:textSize="16sp" />


    </LinearLayout>
</RelativeLayout>